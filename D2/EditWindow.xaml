<Window x:Class="D2.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D2"
        mc:Ignorable="d"
        Title="EditWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Имя:" Margin="10"/>
            <TextBox x:Name="FirstNameTextBox" Margin="10"/>

            <TextBlock Text="Фамилия:" Margin="10"/>
            <TextBox x:Name="LastNameTextBox" Margin="10"/>

            <TextBlock Text="Почта:" Margin="10"/>
            <TextBox x:Name="EmailTextBox" Margin="10"/>

            <Button Content="Сохранить" Margin="10" Click="SaveButton_Click"/>
            <Button Content="Отмена" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
